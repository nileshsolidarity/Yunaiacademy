{
  "name": "yunai-academy",
  "version": "1.0.0",
  "private": true,
  "description": "Yunai Academy - CA Adaptive Pro LMS Platform",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @yunai/api db:generate",
    "db:push": "pnpm --filter @yunai/api db:push",
    "db:migrate": "pnpm --filter @yunai/api db:migrate",
    "db:seed": "pnpm --filter @yunai/api db:seed",
    "db:studio": "pnpm --filter @yunai/api db:studio"
  },
  "packageManager": "pnpm@10.30.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma",
      "protobufjs"
    ]
  },
  "devDependencies": {
    "turbo": "^2.8.10"
  }
}
